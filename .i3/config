set $resizeSize 5
mode "resize" {
        bindsym $left       resize shrink width $resizeSize px or $resizeSize ppt
        bindsym $down       resize grow height $resizeSize px or $resizeSize ppt
        bindsym $up         resize shrink height $resizeSize px or $resizeSize ppt
        bindsym $right      resize grow width $resizeSize px or $resizeSize ppt

        bindsym Left        resize shrink width $resizeSize px or $resizeSize ppt
        bindsym Down        resize grow height $resizeSize px or $resizeSize ppt
        bindsym Up          resize shrink height $resizeSize px or $resizeSize ppt
        bindsym Right       resize grow width $resizeSize px or $resizeSize ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

gaps inner 20

set $moveSize 10
mode "move" {
        bindsym $left       move left $moveSize px 
        bindsym $down       move down $moveSize px
        bindsym $up         move up $moveSize px 
        bindsym $right      move right $moveSize px

        bindsym Left        move left $moveSize px 
        bindsym Down        move down $moveSize px
        bindsym Up          move up $moveSize px 
        bindsym Right       move right $moveSize px

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+m mode "default"
}

bindsym $mod+r mode "resize"
bindsym $mod+m mode "move"

set $bg-color            #191c21
set $inactive-bg-color   #191c21
set $text-color          #979CAC
set $inactive-text-color #3e4451
set $urgent-bg-color     #E53935

# window colors
# #                       border              background         text                 indicator
client.focused          $bg-color           $bg-color          $text-color          #00ff00
client.unfocused        $inactive-bg-color $inactive-bg-color $inactive-text-color #00ff00
client.focused_inactive $inactive-bg-color $inactive-bg-color $inactive-text-color #00ff00
client.urgent           $urgent-bg-color    $urgent-bg-color   $text-color          #00ff00

bar {
    status_command i3blocks -c ~/.i3/i3blocks.conf
    tray_padding 5 px
    position top
    colors {
        focused_workspace          $bg-color           $bg-color          $text-color
        inactive_workspace         $inactive-bg-color  $inactive-bg-color $inactive-text-color
        urgent_workspace           $urgent-bg-color    $urgent-bg-color   $text-color
    }
}


